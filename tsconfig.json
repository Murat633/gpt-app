{
    "compilerOptions": {
        "module": "esnext",
        "target": "es6",
        "strict": true,
        "jsx": "react",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.scss",
        "Sidebar.property.tsx"
    ]
}